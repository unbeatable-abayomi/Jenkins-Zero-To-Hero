
pipeline {
    
	agent any 
    
	environment {
		IMAGE_TAG = "${BUILD_NUMBER}"
	}
    
	stages {
        
		stage('Checkout'){
		   steps {
		sh 'echo passed'
		//git branch: 'main', url: 'https://github.com/unbeatable-abayomi/Jenkins-Zero-To-Hero.git'
		   }
		}

		stage('Build Docker and push'){
	      environment {
		       DOCKER_IMAGE = "igwubor/python-rest-api:${BUILD_NUMBER}"
		// DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
		       REGISTRY_CREDENTIALS = credentials('e0135cac-38b5-4e0d-aaa5-c145daf28580')
	            }
			steps{
				script{
					echo 'Build Docker Image'
                    sh 'ls -ltr'
		sh 'cd python-flask-rest-api/ && docker build -t igwubor/python-rest-api:${DOCKER_IMAGE} .'
                echo 'I want to push Docker Image'
                def dockerImage = docker.image("${DOCKER_IMAGE}")
               docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
echo 'i have  pushed Docker Image'
				}
			}
		}

	    stage('Push the artifacts'){
	      environment {
		       DOCKER_IMAGE = "igwubor/python-rest-api:${BUILD_NUMBER}"
		// DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
		       REGISTRY_CREDENTIALS = credentials('docker-cred')
	            }
	  steps {
		script {
			 echo 'Push to Repo'
                          sh 'ls -ltr'
			def dockerImage = docker.image("${DOCKER_IMAGE}")
			docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
				dockerImage.push()
			}
		}
	  }
	}
      
	stage('Update K8S manifest & push to Repo'){
		environment {
			GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
			GIT_USER_NAME = "unbeatable-abayomi"
		}
			steps {
				script{
withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
						sh '''
					git config user.email "igwubor@outlook.com"
					git config user.name "unbeatable-abayomi"
					BUILD_NUMBER=${BUILD_NUMBER}
					sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" python-flask-rest-api-manifests/deployment.yml
					git add python-flask-rest-api-manifests/deployment.yml
					git commit -m "Update deployment image to version ${BUILD_NUMBER}"
					git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
						'''                        
					}
				}
			}
		}
	}
}
